{
  "manifest_version": 3,
  "name": "Flick Picker",
  "version": "0.1",
  "description": "Quickly get movie recommendations from your Flick-Picker backend.",
  "action": {
    "default_popup": "popup.html",
    "default_title": "Flick Picker"
  },
  "options_page": "options.html",
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "http://localhost:8000/*",
    "https://localhost:8000/*"
  ]
}
